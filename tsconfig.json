{
    "compilerOptions": {
      "strict": true,
      "module": "ESNext",
      "target": "ESNext",
      "moduleResolution": "node",
      "jsx": "preserve",
      "types": ["vite/client"],
      "baseUrl": "./",
        "allowJs": true,  
      "paths": {
        "@/*": [
          "src/*"
        ]
      },
      "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
      ]
    },
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ],
}