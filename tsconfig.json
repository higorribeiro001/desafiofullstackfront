{
    "compilerOptions": {
      // isto alinha com o suporte de navegadores do Vue
      "target": "es5",
      // habilita inferÃªncia estrita de propriedades de dados no `this`
      "strict": true,
      // se usando webpack 2+ ou rollup, para habilitar tree shaking
      "module": "esnext",
      "moduleResolution": "node",
      "baseUrl": "./",
      "paths": {
        "@/*": [
          "src/*"
        ]
      },
      "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
      ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ]
}